{% extends 'base.html.twig' %}


{% block body %}


<div class="row" style="display: flex;align-items: center;justify-content: center;margin-top: 120px;">

    <div class="col-lg-6">

        <div class="card">
            <div class="card-body">
            
                 <a href="{{ path('new_Region') }}"><i class="ri-arrow-left-circle-fill" style="font-size: 50px;"></i></a> 
                <h5 class="card-title">Liste des regions</h5>

                <!-- Table with stripped rows -->
                <table class="table table-striped">
                    <thead>
                    <tr> <th>Libelle</th>
                        <th>Modification</th>
                    
                    </tr>
                    </thead>
                    <tbody>
                    {% for reg in region %}
                        <tr>
                        <td>{{reg.libelle}}</td>
                          
                            <td>
                                <a class="btn btn-success" href="{{ path('edit_Region',{'id':reg.id}) }}">Modifier</a> 
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <!-- End small tables -->
            </div>
        </div>
    </div>
</div>
{% endblock %}